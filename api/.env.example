# API - Variáveis de ambiente
# Copie para .env e ajuste os valores

NODE_ENV=development
PORT=3000

# Obrigatório
DATABASE_URL="postgresql://postgres:password@localhost:5432/ecommerce"

# JWT
JWT_SECRET="altere-em-producao-chave-secreta-jwt"
JWT_EXPIRES_IN="1d"
JWT_REFRESH_SECRET="altere-em-producao-refresh-secret"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (opcional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@ecommerce.com

# Upload
MAX_FILE_SIZE=5242880

# AWS S3 (opcional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Stripe (opcional)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# CORS - URLs dos frontends
FRONTEND_URL=http://localhost:3001
ADMIN_URL=http://localhost:3001
